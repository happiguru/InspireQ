<div class="column is-half">
    <% if user_signed_in? %>
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
            </p>
        </figure>

        <div class"media-content">
            <%= render 'quotes/form' %>
        </div>
    </article>
    <% end %>

<% @quotes.each do | quote |%>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                        <%= gravatar_image_tag(quote.user.email, size: 64, alt: quote.user.name) %>
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong><%= quote.user.name %></strong><br />
                    <small><%= quote.user.username %></small><br />
                    <p><%= quote.quote %></p>
                </div>
                <% if user_signed_in? %>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <%= link_to quote, class: "level-item" do %>
                            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to edit_quote_path(quote), class: "level-item" do %>
                            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to quote, method: :delete, data: {confirm: "Are you sure you want to delete this tweet?"
                        } do %>
                            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                        <% end %>
                    </div>
                </nav>
                <% end %>
            </div>
        </article>
    </div>
<% end %>
</div>