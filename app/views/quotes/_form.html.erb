<%=  simple_form_for(@quote) do |f| %>
<%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :quote, label: "Inspire someone with a quote", input_html: { class: "textarea"}, wrapper: false, 
      label_html: {class: "label"}, placeholder: "Write a Quote...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>
